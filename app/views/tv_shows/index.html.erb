<%= form_tag tv_shows_path, :method => 'get'  do %>
   <%= text_field_tag :search, params[:search]%>
   <%= submit_tag "Search", :name => nil  %>
 <% end %>
<div class= "welcome-home">
  <h1>TV Shows</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Timing</th>
        <th>TV-Channel</th>
      </tr>
    </thead>

    <tbody>
      <% @tv_shows.each do |tv_show| %>
        <tr>
          <td><%= tv_show.name %></td>
          <td><%= tv_show.timing %></td>
          <td><%= tv_show.tv_channel.name%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>  

